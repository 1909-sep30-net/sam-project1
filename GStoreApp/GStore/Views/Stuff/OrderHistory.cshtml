@model GStore.WebUI.Models.DisplayOrder
@using GStore.WebUI.Models;

@{
    ViewData["Title"] = "OrderHistory";
    DisplayOrder display = (DisplayOrder)ViewData["display"];
}

<h1>OrderHistory By CustomerId Or StoreId</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
        </tr>
    </thead>
    <tbody>
@for( int i = 0; i < display.OrderId.Count; i++) { 
        <tr>
            <th>
                @display.OrderId[i]
            </th>
            <th>
                @display.CustomerId[i]
            </th>
            <th>
                @display.StoreId[i]
            </th>
            <th>
                @display.OrderDate[i]
            </th>
            <th>
                @display.TotalPrice[i]
            </th>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Menu">Back to Search Page</a>
</div>
